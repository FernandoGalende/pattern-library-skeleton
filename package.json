{
  "name": "pattern-library-skeleton",
  "version": "1.0.0",
  "description": "A awesome pattern library for your products and experiences!",
  "license": "ISC",
  "author": "Juan Carlos Ruiz <klaufel@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klaufel/pattern-library-skeleton.git"
  },
  "bin": {
    "design-tokens": "bin/design-tokens"
  },
  "scripts": {
    "tokens": "npm run tokens:figma && npm run tokens:build",
    "tokens:figma": "bin/design-tokens",
    "tokens:build": "rm -rf build && style-dictionary build",
    "storybook": "start-storybook -p 9001",
    "storybook:build": "build-storybook -o storybook -c .storybook",
    "prettier:check": "prettier \"./**/*.{js,mdx}\" --check",
    "prettier:write": "prettier \"./**/*.{js,mdx}\" --write",
    "chromatic": "chromatic --app-code=zstdezwo5wk --build-script-name storybook:build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest --updateSnapshot",
    "test:coverage": "jest --coverage",
    "test:coverage-web": "npm run test:coverage && open coverage/lcov-report/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:write",
      "pre-push": "npm run test"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "fileName": false
        }
      ],
      "react-docgen"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-docs": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@testing-library/react": "^10.0.2",
    "babel-jest": "^25.2.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-react-docgen": "^4.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "babel-polyfill": "^6.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-standard": "^4.0.1",
    "esm": "^3.2.25",
    "fs": "0.0.2",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "jest-styled-components": "^7.0.0",
    "node-fetch": "^2.6.0",
    "prettier": "^2.0.2",
    "storybook-chromatic": "^3.5.2",
    "style-dictionary": "^2.8.3"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "prop-types": "^15.7.2",
    "styled-components": "^5.0.1"
  }
}
